# ZEKA - Örnek Çevresel Değişkenler

# Kullanıcı ve Sistem
USER_ID="default_user"
LOG_LEVEL="INFO"
DEFAULT_LANGUAGE="tr"
DEFAULT_STYLE="neutral"

# Veri Depolama
STORAGE_PATH="data"
VECTOR_DB_PATH="data/vector_db"
MEMORY_CACHE_SIZE="1000"

# API Anahtarları
OPENAI_API_KEY="your-openai-api-key"
OPENROUTER_API_KEY="your-openrouter-api-key"
ELEVENLABS_API_KEY="your-elevenlabs-api-key"
HUGGINGFACE_API_KEY="your-huggingface-api-key"
COHERE_API_KEY="your-cohere-api-key"

# Dil Modeli Ayarları
DEFAULT_MODEL="anthropic/claude-3-haiku"
DEFAULT_TEMPERATURE="0.7"
DEFAULT_MAX_TOKENS="1000"

# Ses Yetenekleri
ENABLE_VOICE="true"
DEFAULT_VOICE_ID="21m00Tcm4TlvDq8ikWAM"
VOICE_ACTIVATION_ENABLED="true"
WAKE_WORD="hey zeka"
ACTIVATION_THRESHOLD="0.5"

# Ses Donanımı
AUDIO_INPUT_DEVICE="default"
AUDIO_OUTPUT_DEVICE="default"
AUDIO_SAMPLE_RATE="44100"
AUDIO_CHANNELS="1"
AUDIO_CHUNK_SIZE="1024"

# Ses İşleme
SPEECH_LANGUAGE="tr"
TTS_MODEL="eleven_multilingual_v1"
MAX_SILENCE_SEC="1.0"
SPEECH_TIMEOUT_SEC="15.0"

# Ses Önbellekleme
ENABLE_VOICE_CACHE="true"
VOICE_CACHE_SIZE_MB="512"
VOICE_CACHE_AGE_DAYS="30"

# Masaüstü Denetleyicisi
TESSERACT_PATH="C:\\Program Files\\Tesseract-OCR\\tesseract.exe"  # Windows için Tesseract OCR yolu
ENABLE_DESKTOP_AGENT="true"  # Masaüstü ajanını etkinleştir
DESKTOP_SCREENSHOT_DIR="data/screenshots"  # Ekran görüntülerinin kaydedileceği dizin
DESKTOP_SECURITY_LEVEL="medium"  # Güvenlik seviyesi (low, medium, high)

# Vektör Veritabanı Ayarları
EMBEDDING_FUNCTION="sentence_transformer"
EMBEDDING_MODEL="all-MiniLM-L6-v2"
VECTOR_SEARCH_TOP_K="5"

# MCP Ayarları
MCP_ENABLED="true"
MCP_SERVER_URL="http://localhost:8000"
MCP_SERVER_NAME="ZEKA MCP Server"
MCP_REGISTRY_URL="https://mcp.so/api/servers"
MCP_REGISTRY_API_KEY=""  # Opsiyonel, MCP.so'ya sunucu kaydetmek için
MCP_AUTO_DISCOVER="true"  # Otomatik MCP sunucusu keşfi
MCP_MAX_SERVERS="5"  # Bağlanılacak maksimum MCP sunucusu sayısı

# Güvenlik Ayarları
ENABLE_API_SECURITY="true"
JWT_SECRET="your-jwt-secret-key"
TOKEN_EXPIRY_MINUTES="60"
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_PERIOD_SECONDS="3600"
